{
  "compilerOptions": {
    "declaration": true,
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "types": ["jest", "node"],
    "lib": ["esnext", "dom", "dom.iterable"]
  },
  "exclude": ["node_modules", "__tests__"],
  "include": ["./src"]
}
